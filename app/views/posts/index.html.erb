<div class="container">
    <h1>Posts</h1>

    <% @posts.each do |post| %>
        <h4><%= post.id %></h4>
        <h4>Title : <%= post.title %></h4> 
        <p><%= post.content %></p> 
        <%= link_to 'Show this post', post_path(post) %>  

        <hr />
    <% end %>

    <%= link_to 'New Post', new_post_path%>



    <p>Find me in app/views/posts/index.html.erb</p>

</div>
