<h1>Posts#new</h1>
<p>Find me in app/views/posts/new.html.erb</p>

<%= form_with model: @post, local: true do |form| %>
    <div id='main-form'>
        <%= form.label :title %>
        <%= form.text_field :title %> <br />

        <%= form.label :content %>
        <%= form.text_field :content %> <br />

        <%= form.submit%>
    </div>

<% end %>