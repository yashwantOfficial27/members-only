<div class="container">

    <h3>Post#show</h3>

    <%= render @post %>

    <div>
        <% if current_user && current_user.id == @post.user_id %>
            <%= link_to 'Edit this post', edit_post_path(@post) %> |
        <% end %>
        <%= link_to 'Back to posts', posts_path %> <br />
        <% if current_user && current_user.id == @post.user_id %>
            <%= button_to 'Destroy this post', @post, method: :delete, class: "btn btn-primary" %>
        <% end %>
    </div>    
    <hr />
</div>

<div class="container">
    <h4>Comments</h4>
    <%= render 'comments/form', post: @post, comment: @post.comments.build, submit_label: 'Reply' %>
    <% @comments.each do |comment| %>
        <%= render 'comments/comment', post: @post, comment: comment %>
    <% end %>
</div>